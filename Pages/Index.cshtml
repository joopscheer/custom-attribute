@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <div class="form-check">
            <input type="checkbox" asp-for="NameRequired" class="form-check-input">
            <label asp-for="NameRequired" class="form-check-label">Name is required</label>
        </div>
    </div>
    <hr/>
    <div class="form-group mb-3">
        <label asp-for="Bike.Brand" class="form-label"></label>
        <input asp-for="Bike.Brand" class="form-control" />
        <span asp-validation-for="Bike.Brand" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Bike.Model" class="form-label"></label>
        <input asp-for="Bike.Model" class="form-control" />
        <span asp-validation-for="Bike.Model" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <div class="form-check">
            <input type="checkbox" asp-for="Bike.RequireModel" class="form-check-input">
            <label asp-for="Bike.RequireModel" class="form-check-label">Model is required</label>
        </div>
    </div>
    @if (Model.Success)
    {
        <div class="alert alert-success" role="alert">
            Done without validation errors.
        </div>
    }
    <div class="form-actions mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
